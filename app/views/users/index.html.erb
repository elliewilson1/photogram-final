<h1>List of users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
    <th></th>
  </tr>

  <% @list_of_users.each do |a_user| %>
  <tr>
    <td>
      <%= a_user.username %>
    </td>
    <td>
      <%= a_user.private? ? "Yes" : "No" %>
    </td>
    <td>
      <% if current_user.present? %>
        <form action="/insert_follow_request" method="post">
        <input type="hidden" name="query_recipient_id" value="">
        <button>
          Follow
        </button>
        </form>
      <% else %>
      <% end %>
    </td>
    <td>
      <a href="/users/<%= a_user.id %>">Show details</a>
    </td>
  </tr>
  <% end %>
</table>
