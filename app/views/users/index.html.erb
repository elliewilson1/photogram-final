<h1>List of users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
    <th></th>
  </tr>

  <% @list_of_users.each do |a_user| %>
  <tr>
    <td>
      <%= a_user.username %>
    </td>
    <td>
      <%= a_user.private? ? "Yes" : "No" %>
    </td>
    <td>
      <% if current_user.present? %>

      <% accepted = FollowRequest.where({ 
        :sender_id   => current_user.id,
        :recipient_id=> a_user.id,
        :status      => "accepted" }).at(0) %>
      
      <% pending = FollowRequest.where({
        :sender_id => current_user.id,
        :recipient_id => a_user.id,
        :status => "pending" }).at(0) %>

        <% if accepted %>
          <a href="/delete_follow_request/<%= accepted.id %>">Unfollow</a>

        <% elsif pending %>
          Request sent.<a href="/delete_follow_request/<%= pending.id %>">Cancel</a>
        <% else %>
          <form action="/insert_follow_request" method="post">
            <input type="hidden" name="query_sender_id" value="<%= current_user.id %>">
            <input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">
            <input type="hidden" name="query_status" value="pending">

            <button>Follow</button>
          </form>
        <% end %>

      <% end %>
    </td>
    <td>
      <a href="/users/<%= a_user.id %>">Show details</a>
    </td>
  </tr>
  <% end %>
</table>
