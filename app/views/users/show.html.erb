<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private? %>

  <dt>Followers</dt>
  <dd><%= @followers.count %>

  <% if @pending_follow_requests.any? && current_user == @the_user %>
    <h4>Pending follow requests</h4>
    <% @pending_follow_requests.each do |a_request| %>
    <ul>
      <li>
        <%= User.where({ :id => a_request.sender_id }).at(0).username %>
        <form action="/modify_follow_request/<%= a_request.id %>" method="post">
        <input name="query_status" value="accepted" type="hidden">
        <button>Accept</button>
        </form>
        <form action="/modify_follow_request/<%= a_request.id %>" method="post">
        <input name="query_status" value="rejected" type="hidden">
        <button>Reject</button>
        </form>
      </li>
    </ul>
    <% end %>
  <% elsif FollowRequest.where({ :sender_id => current_user.id, :recipient_id => @the_user.id, :status => "accepted" }).any? %>
    <form action="/follow_requests/<%= FollowRequest.where({ :sender_id => current_user.id, :recipient_id => @the_user.id, :status => "accepted"}).at(0).id %>" method="post">
    <input name="_method" value="delete" type="hidden">
    <a href="/delete_follow_request/<%= FollowRequest.where({ :sender_id => current_user.id, :recipient_id => @the_user.id, :status => "accepted"}).at(0).id %>">Unfollow</a>
  <% end %>
  </dd>

  <dt>Following</dt>
  <dd><%= @following.count %>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Own photos (<%= @own_photos.count %>)</h2>

<table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Caption
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @own_photos.each do |a_photo| %>
      <tr>
        <td>
          <img src="<%= a_photo.image %>">
        </td>

        <td>
          <% the_id = a_photo.owner_id %>
          <% matching_user = User.where({ :id => the_id }) %>
          <%= matching_user.at(0).username %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
</table>
