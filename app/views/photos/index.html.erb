<div>
  <h1>
    List of photos
  </h1>
</div>

<div>
  <div>
    <% if current_user.present? %>
    <form action="/insert_photo" method="post">
      
        <label for="image_url_box">
          Image
        </label>

        <input type="file" id="image_url_box" name="query_image_url">


        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="2" placeholder="Enter a caption for the photo"></textarea>

      <button>
        Add photo
      </button>
    </form>
    <hr>
    <% end %>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <img src="<%= a_photo.image %>">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <% the_id = a_photo.owner_id %>
          <% matching_user = User.where({ :id => the_id }) %>
          <%= matching_user.at(0).username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
